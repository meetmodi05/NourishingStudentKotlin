<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/packages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="Packages"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/first_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="13dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/img_bg"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/packages">

        <TextView
            android:id="@+id/carrerSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Career Selection\nRs.3999"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Psychometric Assessment Report."
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="2 Counseling 1 to 1 sessions with Career Counselor."
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_buyNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Buy Now!"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/img_bg"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/first_ll">

        <TextView
            android:id="@+id/carrerSelection2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Career Selection Premium Pack\nRs.4999"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Psychometric Assessment Report."
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="2 Counseling 1 to 1 sessions with Career Counselor."
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Access to Case Studies"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Access to Blogs."
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_comingSoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Coming Soon!"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>