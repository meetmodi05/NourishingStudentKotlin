<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp">

        <ImageView
            android:id="@+id/back_aero_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/keyboard_backspace" />

        <TextView
            android:id="@+id/career_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/career_info"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nesScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="25dp"
                android:background="@drawable/ll_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/img_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon_image">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:src="@drawable/bulb"
                        app:layout_constraintLeft_toLeftOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="15dp"
                        android:text="@string/law"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cl1"
                android:layout_margin="25dp"
                android:background="@drawable/career_info_bg"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    android:src="@drawable/bulb_small" />

                <TextView
                    android:id="@+id/tv_impact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon1"
                    android:gravity="start"
                    android:padding="4dp"
                    android:text="@string/impact"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescriptionImpact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_impact"
                    android:layout_marginVertical="15dp"
                    android:layout_marginEnd="10dp"
                    android:justificationMode="inter_word"
                    android:paddingHorizontal="15dp"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cl1"
                android:layout_margin="25dp"
                android:background="@drawable/career_info_bg"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    android:src="@drawable/bulb_small" />

                <TextView
                    android:id="@+id/tvSpecialization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon2"
                    android:gravity="start"
                    android:padding="4dp"
                    android:text="@string/specialization"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescriptionSpl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSpecialization"
                    android:layout_marginVertical="15dp"
                    android:layout_marginEnd="10dp"
                    android:justificationMode="inter_word"
                    android:paddingHorizontal="15dp"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cl1"
                android:layout_margin="25dp"
                android:background="@drawable/career_info_bg"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/rl_icon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    android:src="@drawable/bulb_small" />

                <TextView
                    android:id="@+id/tvCareerPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rl_icon3"
                    android:gravity="start"
                    android:padding="4dp"
                    android:text="@string/career_paths"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescriptionCareerPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCareerPath"
                    android:layout_marginVertical="15dp"
                    android:layout_marginEnd="10dp"
                    android:justificationMode="inter_word"
                    android:paddingHorizontal="15dp"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cl1"
                android:layout_margin="25dp"
                android:background="@drawable/career_info_bg"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    android:src="@drawable/bulb_small" />

                <TextView
                    android:id="@+id/tvWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon4"
                    android:gravity="start"
                    android:padding="4dp"
                    android:text="@string/work"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescriptionWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvWork"
                    android:layout_marginVertical="15dp"
                    android:layout_marginEnd="10dp"
                    android:justificationMode="inter_word"
                    android:paddingHorizontal="15dp"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cl1"
                android:layout_margin="25dp"
                android:background="@drawable/career_info_bg"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    android:src="@drawable/bulb_small" />

                <TextView
                    android:id="@+id/tvWorkLifeBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon5"
                    android:gravity="start"
                    android:padding="4dp"
                    android:text="@string/work_lifeB"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescriptionWLB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvWorkLifeBalance"
                    android:layout_marginVertical="15dp"
                    android:layout_marginEnd="10dp"
                    android:justificationMode="inter_word"
                    android:paddingHorizontal="15dp"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cl1"
                android:layout_margin="25dp"
                android:background="@drawable/career_info_bg"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    android:src="@drawable/bulb_small" />

                <TextView
                    android:id="@+id/tvAdvantageDisadvantage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/icon6"
                    android:gravity="start"
                    android:padding="4dp"
                    android:text="@string/adv_dis"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescriptionAdvantageDisadvantage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAdvantageDisadvantage"
                    android:layout_marginVertical="15dp"
                    android:layout_marginEnd="10dp"
                    android:justificationMode="inter_word"
                    android:paddingHorizontal="15dp"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cl1"
                android:layout_margin="25dp"
                android:background="@drawable/career_info_bg"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    android:src="@drawable/bulb_small" />

                <TextView
                    android:id="@+id/tvInvestment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon7"
                    android:gravity="start"
                    android:padding="4dp"
                    android:text="@string/inv"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescriptionInvestment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvInvestment"
                    android:layout_marginVertical="15dp"
                    android:layout_marginEnd="10dp"
                    android:justificationMode="inter_word"
                    android:paddingHorizontal="15dp"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cl1"
                android:layout_margin="25dp"
                android:background="@drawable/career_info_bg"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    android:src="@drawable/bulb_small" />

                <TextView
                    android:id="@+id/tvStrengths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon8"
                    android:gravity="start"
                    android:padding="4dp"
                    android:text="@string/str_weak"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescriptionStrengths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvStrengths"
                    android:layout_marginVertical="15dp"
                    android:layout_marginEnd="10dp"
                    android:justificationMode="inter_word"
                    android:paddingHorizontal="15dp"
                    android:text="@string/lorem_ipsum"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>